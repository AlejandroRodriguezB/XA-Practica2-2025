{
  "id": null,
  "title": "WebApi HA (NGINX + Multi-Replica)",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "tags": ["webapi", "ha", "nginx", "prometheus"],
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "RPS (Total)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(aspnetcore_requests_total[1m]))",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 3, "w": 6, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Errores (5xx)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[1m]))",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 3, "w": 6, "x": 6, "y": 0 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "CPU Average (todas las instancias)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg(rate(process_cpu_seconds_total[1m]))",
          "legendFormat": "CPU total",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 4, "w": 12, "x": 0, "y": 3 }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "RAM Average (todas las instancias)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg(process_resident_memory_bytes)",
          "legendFormat": "RAM total",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 4, "w": 12, "x": 12, "y": 3 }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
